{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "go build .",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Pack",
            "type": "shell",
            "command": "go build -o bin/application ."
        }
        {
            "label": "Clean",
            "type": "shell",
            "command": "go clean"
        },
        {
            "label": "Run Server",
            "type": "shell",
            "command": "go run ."
        }
    ]
}